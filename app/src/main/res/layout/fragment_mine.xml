<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_color_no_corner_bg"
        app:layout_constraintTop_toTopOf="parent"
        app:title="设置"
        app:titleTextColor="@color/white" />

    <ImageView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/tomato"
        app:layout_constraintBottom_toBottomOf="@id/toolbar"
        app:layout_constraintLeft_toLeftOf="@id/toolbar"
        app:layout_constraintRight_toRightOf="@id/toolbar"
        app:layout_constraintTop_toTopOf="@id/toolbar" />

    <View
        android:id="@+id/view_change_color"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:background="@color/white"

        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        android:id="@+id/iv_change_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:src="@drawable/ic_change_color"
        app:layout_constraintBottom_toBottomOf="@id/view_change_color"
        app:layout_constraintLeft_toLeftOf="@id/view_change_color"
        app:layout_constraintTop_toTopOf="@id/view_change_color" />

    <TextView
        android:id="@+id/tv_change_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="修改主题色"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/view_change_color"
        app:layout_constraintLeft_toRightOf="@id/iv_change_color"
        app:layout_constraintTop_toTopOf="@id/view_change_color" />

    <ImageView
        android:id="@+id/iv_change_color_go"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:src="@drawable/ic_go_forward"
        app:layout_constraintBottom_toBottomOf="@id/view_change_color"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/view_change_color" />


</androidx.constraintlayout.widget.ConstraintLayout>