<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true">
        <shape>
            <corners android:radius="60dp" />
            <gradient android:angle="0" android:centerColor="#2C7DFB" android:centerX="0.55" android:endColor="#8769FF" android:startColor="#35B6FF" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape>
            <corners android:radius="60dp" />
            <solid android:color="#4D525878" />
        </shape>
    </item>
</selector>
